
condicional:
	IF LEFT_PARENTESIS comparative RIGHT_PARENTESIS "{" comando "}"
	|IF LEFT_PARENTESIS comparative RIGHT_PARENTESIS "{" comando "}" ELSE "{" comando "}"
	;

comparative:
	expressao MENOR expressao
	|expressao MENORIGUAL expressao
	|expressao MAIOR expressao
	|expressao MAIORIGUAL expressao
	|expressao IGUAL expressao
	|expressao DIFERENTE expressao
	|expressao E expressao
	|expressao OU expressao
	;

"<"			return MENOR;
"<="		return MENORIGUAL;
">"			return MAIOR;
">="		return MAIORIGUAL;
"=="		return IGUAL;
"!="		return DIFERENTE;
"&&"		return E;
"||"		return OU;
"if"		return IF;
"else"		return ELSE;

condicional:
	expressao operador expressao
	;

condicionais_multiplos:
	condicional
	| condicional booleanas
	;

booleanas:
	E condicionais_multiplos
	| OU condicionais_multiplos
	;

